{
  "name": "Forem",
  "version": "0.1.4",
  "description": "For Empowering Community",
  "manifest_version": 2,
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": { "16": "Icon-16.png",
             "32": "Icon-32.png",
             "48": "Icon-48.png",
            "128": "Icon-128.png" },
  "browser_specific_settings": {
    "gecko": {
      "id": "@forem",
        "strict_min_version": "42.0"
    }
  }
}
